@model GlobalSolutionNET.Models.AddDroneViewModel


<form method="post">

    <h1>Add Drone</h1>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Name" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Model</label>
        <input type="text" class="form-control" id="model" placeholder="Model"  asp-for="Model"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Manufacterer</label>
        <input type="text" class="form-control" id="manufacterer" placeholder="Manufacterer"  asp-for="Manufacturer"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>